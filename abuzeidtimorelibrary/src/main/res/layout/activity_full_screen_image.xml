<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.timore.abuzeidtimore.activities.FullScreenImageActivity">

    <com.timore.abuzeidtimore.customviews.TouchImageView
        android:id="@+id/fullscreen_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/fullscreen_bar_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <Button

        android:id="@+id/fullscreen_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="@string/done"
        style="@style/button"
        android:layout_gravity="top|right" />


</FrameLayout>
